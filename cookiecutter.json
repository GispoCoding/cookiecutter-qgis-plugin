{
    "plugin_name": "My QGIS plugin",
    "project_directory": "{{ cookiecutter.plugin_name|lower|replace(' ', '-') }}",
    "plugin_package": "{{ cookiecutter.project_directory|replace('-', '') }}",
    "version_control": [
        "GitHub",
        "GitLab",
        "None"
    ],
    "git_repo_organization": "{% if cookiecutter.version_control != 'None' %}my-organization{% endif %}",
    "git_repo_url": "{% if cookiecutter.version_control != 'None' %}https://{% if cookiecutter.version_control == 'GitHub' %}github.com{% elif cookiecutter.version_control == 'GitLab'%}gitlab.com{% endif %}/{{cookiecutter.git_repo_organization}}/{{cookiecutter.project_directory}}{% endif %}",
    "add_vscode_config": "n",
    "add_pycharm_config": "n",
    "license": [
        "GPL2",
        "GPL3",
        "other"
    ],
    "use_qgis_plugin_tools": "y",
    "_copy_without_render": [
        ".github/workflows/release.yml",
        ".github/workflows/tests.yml",
        "docs/push_translations.yml"
    ]
}
